{
  "name": "root",
  "private": true,
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "dev": "./scripts/dev.sh",
    "dev:boilerplate": "npm --workspace projects/boilerplate run dev",
    "dev:stream": "npm --workspace projects/stream run dev",
    "dev:auth": "npm --workspace projects/auth run dev",
    "build": "lerna run build",
    "prebuild": "npm run build:config",
    "build:config": "lerna run build --scope config",
    "bootstrap": "lerna bootstrap",
    "start:stream": "npm --workspace projects/stream run start"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "tsconfig-paths": "^4.2.0",
    "yup": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.1",
    "@types/yup": "^0.29.14",
    "concurrently": "^9.1.2",
    "lerna": "^8.2.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.15",
    "typescript": "^5.8.3"
  }
}